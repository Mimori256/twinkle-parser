{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "charset": "utf8",
    "module": "commonjs",
    "target": "es2018",
    "lib": [
        "es2018"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitReturns": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
      "types",
      "node_modules/@types"
  ]
}
